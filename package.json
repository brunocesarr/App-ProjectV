{
  "name": "projectv",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "env:dev": "NODE_ENV=development",
    "env:test": "NODE_ENV=test",
    "env:prod": "NODE_ENV=production",
    "android:development": "yarn env:dev && react-native run-android",
    "android:production": "yarn env:prod && react-native run-android",
    "ios:development": "yarn env:dev && react-native run-ios",
    "ios:production": "yarn env:prod && react-native run-ios",
    "start:development": "yarn env:dev && react-native start",
    "start:production": "yarn env:prod && react-native start",
    "build:development": "yarn env:dev && cd android/app && gradle clean && gradle bundleRelease",
    "build:production": "yarn env:prod && cd android/app && gradle clean && gradle bundleRelease",
    "test": "yarn env:test && jest",
    "test:watch": "yarn env:test && jest --watch",
    "test:coverage": "yarn env:test && jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write **/*.{js,jsx,ts,tsx,json} && prettier --write *.{js,jsx,ts,tsx,json}"
  },
  "dependencies": {
    "@react-navigation/native": "^6.0.2",
    "@react-navigation/stack": "^6.0.7",
    "@types/react": "^17",
    "react": "17.0.2",
    "react-native": "0.65.1",
    "react-native-dotenv": "^3.3.0",
    "react-native-gesture-handler": "^1.10.3",
    "react-native-safe-area-context": "^3.3.0",
    "react-native-screens": "^3.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^3.0.1",
    "@testing-library/jest-native": "^4.0.2",
    "@testing-library/react-native": "^7.2.0",
    "@types/jest": "^27.0.1",
    "@types/react-native": "^0.64.5",
    "@types/react-test-renderer": "^17.0.1",
    "babel-jest": "^27.1.0",
    "eslint": "^7.14.0",
    "eslint-plugin-jest": "^25.2.4",
    "jest": "^27.1.0",
    "jest-sonar-reporter": "^2.0.0",
    "metro-react-native-babel-preset": "^0.66.2",
    "react-test-renderer": "^17.0.2",
    "typescript": "^4.4.2"
  },
  "rnpm": {
    "assets": [
      "./src/assets/fonts/"
    ]
  },
  "resolutions": {
    "@types/react": "^17"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/**.*",
      "!<rootDir>/src/**/index.ts",
      "!<rootDir>/src/@types/**/**.*",
      "!<rootDir>/src/styles/colors.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?@?react-native|@react-native-community|@react-navigation)"
    ],
    "setupFiles": [
      "<rootDir>/jest/setup.js"
    ],
    "testResultsProcessor": "jest-sonar-reporter",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  }
}
